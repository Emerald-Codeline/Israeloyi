<div class="container">
    <h1>Edit Investment</h1>
    <div class="row p-4">
        <div class="col-md-10">
            <form action="/admin101/investment/create" method="post">
            
            <div class="form-group">
                <label for="planname">Plan Name</label>
                <input type="text" class="form-control" name="planname" id="planname" placeholder="Enter Plan Name" value="{{investment.name}}">
            </div>
            
            <div class="form-group">
                <label for="minprice">Minimum Price</label>
                <input type="number" class="form-control" name="minprice" id="minprice" placeholder="Enter Minimum Price" value="{{investment.minPrice}}">
            </div>

            <div class="form-group">  
                <label for="maxprice">Maximum Price</label>
                <input type="number" class="form-control" name="maxprice" id="maxprice" placeholder="Enter Maximum Price" value="{{investment.maxPrice}}">
            </div>

            <div class="form-group">
                <label for="profitmargin">Profit Margin</label>
                <input type="number" class="form-control" name="profitmargin" id="profitmargin" placeholder="Enter Profit Margin" value="{{investment.profitMargin}}">
            </div>

            <div class="form-group">
                <label for="securityplan">Security Plan</label>
                <input type="text" class="form-control" name="securityplan" id="securityplan" placeholder="Enter Security Plan" value="{{investment.securityPlan}}">
            </div>
            
            <div class="form-group">
                <label for="status">Status</label>
                <select name="status"  id="status" class="form-control">
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                    <option value="draft">Draft</option>
                </select>
            </div>

            <div class="form-check ml-3">
                <label for="Allow Investment">
                    <input type="checkbox" class="form-chech-input" name="allowinvestment" id="allowinvestment">
                    Allow Investment
                </label>
            </div>

             <div class="form-group">
                <label for="securityplan">Support Time</label>
                <input type="text" class="form-control" name="supporttime" id="supporttime" placeholder="Enter Support Time">
            </div>

            <div class="form-group">
                <label for="decsriptio">Description</label>
                <textarea name="description" id="description" class="form-control" placeholder="Describe The Investment here"   rows="10">{{investment.description}}</textarea>
            </div>

            <button class="btn-outline-success btn-lg" type="submit">Create Post</button>
            </form>
        </div>
    </div>
</div>